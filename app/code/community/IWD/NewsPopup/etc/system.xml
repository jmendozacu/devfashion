<?xml version="1.0"?>
<config>
	<tabs>
        <iwdall>
            <label>IWD</label>
            <sort_order>200</sort_order>
        </iwdall>
  	</tabs>
	<sections>
	     <iwdpopup translate="label" module="iwdpopup">
	            <label>Newsletter Popup</label>
	            <tab>iwdall</tab>
	            <frontend_type>text</frontend_type>
	            <sort_order>20</sort_order>
	            <show_in_default>1</show_in_default>
	            <show_in_website>1</show_in_website>
	            <show_in_store>1</show_in_store>
	    	 <groups>
	                <general translate="label" module="core">
	                    <label>General</label>
	                    <frontend_type>text</frontend_type>
	                    <sort_order>10</sort_order>
	                    <show_in_default>1</show_in_default>
	                    <show_in_website>1</show_in_website>
	                    <show_in_store>1</show_in_store>
	                    <fields>
	                        <newsenabled translate="label" module="core">
	                            <label>Enabled</label>
	                            <frontend_type>select</frontend_type>
	                            <source_model>adminhtml/system_config_source_yesno</source_model>
	                            <sort_order>1</sort_order>
	                            <show_in_default>1</show_in_default>
	                            <show_in_website>1</show_in_website>
	                            <show_in_store>1</show_in_store>
	                        </newsenabled>
	                        <newswidth translate="label" module="cms">
	                            <label>Popup Width</label>
	                            <frontend_type>text</frontend_type>
	                            <sort_order>10</sort_order>
	                            <show_in_default>1</show_in_default>
	                            <show_in_website>1</show_in_website>
	                            <show_in_store>1</show_in_store>
	                            <comment>(in pixels)</comment>
	                        </newswidth>
	                        <newspopupdelay translate="label" module="cms">
	                            <label>Popup Timing</label>
	                            <frontend_type>text</frontend_type>
	                            <sort_order>12</sort_order>
	                            <show_in_default>1</show_in_default>
	                            <show_in_website>1</show_in_website>
	                            <show_in_store>1</show_in_store>
	                            <comment>delay in seconds(for example "3") after page load </comment>
	                        </newspopupdelay>
	                         <newstopspace translate="label" module="cms">
	                            <label>Popup Top Position</label>
	                            <frontend_type>text</frontend_type>
	                            <sort_order>15</sort_order>
	                            <show_in_default>1</show_in_default>
	                            <show_in_website>1</show_in_website>
	                            <show_in_store>1</show_in_store>
	                            <comment>distance between top of the screen and popup, in px</comment>
	                        </newstopspace>

	                        <newsbuttonbg translate="label">
								<label>Button color</label>
								<frontend_type>text</frontend_type>	
								<validate>color</validate>
								<sort_order>35</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<comment>Button background color</comment>
							</newsbuttonbg>
							<newsbuttonhover translate="label">
								<label>Button hover color</label>
								<frontend_type>text</frontend_type>	
								<validate>color</validate>
								<sort_order>40</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<comment>Button hover</comment>
							</newsbuttonhover>	
							<newsbuttontext translate="label">
								<label>Button text color</label>
								<frontend_type>text</frontend_type>	
								<validate>color</validate>
								<sort_order>45</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<comment>Submit button text color</comment>
							</newsbuttontext>	
							
							
							
							
							<newsiconbg translate="label">
								<label>Icon background</label>
								<frontend_type>text</frontend_type>	
								<validate>color</validate>
								<sort_order>50</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<comment>Icons background color</comment>
							</newsiconbg>
							<newsiconhover translate="label">
								<label>Icon hover background</label>
								<frontend_type>text</frontend_type>	
								<validate>color</validate>
								<sort_order>60</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<comment>Icons hover background color</comment>
							</newsiconhover>	
							<newsicontext translate="label">
								<label>Icon symbol color</label>
								<frontend_type>text</frontend_type>	
								<validate>color</validate>
								<sort_order>65</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<comment>Icons color</comment>
							</newsicontext>	
							<newsicongrid translate="label">
	                            <label>Icon block width</label>
	                            <frontend_type>select</frontend_type>
								<source_model>iwdpopup/system_config_source_design_icon_arrangement</source_model>
	                            <sort_order>70</sort_order>
	                            <show_in_default>1</show_in_default>
	                            <show_in_website>1</show_in_website>
	                            <show_in_store>1</show_in_store>
	                            <comment>Icons arrangement: 2, 3, 5 icons per row.</comment>
	                        </newsicongrid>
	                        
	                        
	                        <newslink translate="label" module="core">
	                            <label>Display Newsletter link in footer</label>
	                            <frontend_type>select</frontend_type>
	                            <source_model>adminhtml/system_config_source_yesno</source_model>
	                            <sort_order>20</sort_order>
	                            <show_in_default>1</show_in_default>
	                            <show_in_website>1</show_in_website>
	                            <show_in_store>1</show_in_store>
	                        </newslink>
	                        <newslinktext translate="label" module="cms">
	                            <label>Footer Newsletter link text</label>
	                            <frontend_type>text</frontend_type>
	                            <sort_order>30</sort_order>
	                            <show_in_default>1</show_in_default>
	                            <show_in_website>1</show_in_website>
	                            <show_in_store>1</show_in_store>
	                        </newslinktext>
	                        <newslinkclass translate="label" module="cms">
	                            <label>Newsletter link class/identifier</label>
	                            <frontend_type>text</frontend_type>
	                            <sort_order>50</sort_order>
	                            <show_in_default>1</show_in_default>
	                            <show_in_website>1</show_in_website>
	                            <show_in_store>1</show_in_store>
	                            <comment>Please, enter link class name for example '.newsletter' or link identifier for example '#newsletter' for popup launch after link with this class or id 'click'</comment>
	                        </newslinkclass>
	                    </fields>
	                  </general>
	                  <device translate="label" module="core">
	                    <label>Mobile/Tablet Support</label>
	                    <frontend_type>text</frontend_type>
	                    <sort_order>20</sort_order>
	                    <show_in_default>1</show_in_default>
	                    <show_in_website>1</show_in_website>
	                    <show_in_store>1</show_in_store>
	                    <fields>
	                    	<newsmobile translate="label" module="core">
	                            <label>Disable Popup for Mobile</label>
	                            <frontend_type>select</frontend_type>
	                            <source_model>adminhtml/system_config_source_yesno</source_model>
	                            <sort_order>3</sort_order>
	                            <show_in_default>1</show_in_default>
	                            <show_in_website>1</show_in_website>
	                            <show_in_store>1</show_in_store>
	                        </newsmobile>
	                        <newstablet translate="label" module="core">
	                            <label>Disable Popup for Tablet</label>
	                            <frontend_type>select</frontend_type>
	                            <source_model>adminhtml/system_config_source_yesno</source_model>
	                            <sort_order>6</sort_order>
	                            <show_in_default>1</show_in_default>
	                            <show_in_website>1</show_in_website>
	                            <show_in_store>1</show_in_store>
	                        </newstablet>
	                    
	                    </fields>
	                  </device>
	           </groups>
	     </iwdpopup>
     </sections>
</config>