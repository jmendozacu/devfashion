<config>
    <sections>
        <j2tsmsgateway translate="label comment" module="j2tsmsgateway">
            <tab>catalog</tab>
            <label>J2T Sms Gateway</label>
            <frontend_type>text</frontend_type>
            <sort_order>210</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <default translate="label comment" module="j2tsmsgateway">
                    <label>Defaults</label>
                    <comment><![CDATA[Spécification des détails techniques de votre gateway SMS.]]></comment>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <get_post translate="label">
                            <label><![CDATA[Méthode d'envoi]]></label>
                            <frontend_type>select</frontend_type>
                            <source_model>j2tsmsgateway/config_getpost</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Méthode utilisé lors de l'envoi du formulaire SMS.]]></comment>
                        </get_post>

                        <url translate="label">
                            <label>URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[URL de votre gateway.]]></comment>
                        </url>
                        <login translate="label">
                            <label>Login</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Nom d'utilisateur du compte gateway.]]></comment>
                        </login>
                        <password translate="label">
                            <label><![CDATA[Mot de passe]]></label>
                            <frontend_type>password</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Mot de passe du compte gateway.]]></comment>
                        </password>
                        <sender>
                            <label><![CDATA[Expéditeur]]></label>
                            <frontend_type>text</frontend_type>
                            <sort_order>32</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Numéro de téléphone de d'expéditeur.]]></comment>
                        </sender>
                        <max_char>
                            <label><![CDATA[Caractères max.]]></label>
                            <frontend_type>text</frontend_type>
                            <sort_order>33</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Nombre de caratère max.]]></comment>
                        </max_char>

                        <params translate="label">
                            <label><![CDATA[Paramètres]]></label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>35</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Paramètres nécéssaires à l'envoie des sms.]]></comment>
                        </params>

                        <return_ok>
                            <label><![CDATA[Retour]]></label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Code retour OK.]]></comment>
                        </return_ok>

                   </fields>
                </default>
            </groups>
        </j2tsmsgateway>
    </sections>
</config>