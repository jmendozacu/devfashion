<config>
	<sections>
		<colorswatch translate="label">
			<label>Color Swatch Pro</label>
			<tab>belvg</tab>
			<frontend_type>text</frontend_type>
			<sort_order>1000</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<settings translate="label">
					<label>Extension Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>100</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled translate="label comment">
							<label>Enabled</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_enabledisable</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enabled>
						<attributes translate="label comment">
							<label>Attributes to Replace</label>
							<frontend_type>Text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</attributes>
						<use_icons translate="label comment">
							<label>Use Icons</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</use_icons>
						<show_not_allowed translate="label comment">
							<label>Show Not Allowed Options</label>
							<comment><![CDATA[if use icons]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</show_not_allowed>
						<icon_folder translate="label comment">
							<label>Icons Directory</label>
							<comment><![CDATA[relative to the media folder with '/']]></comment>
							<frontend_type>Text</frontend_type>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</icon_folder>
						<icon_ext translate="label comment">
							<label>Icon Extension</label>
							<frontend_type>Text</frontend_type>
							<sort_order>60</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</icon_ext>
						<switch_image translate="label comment">
							<label>Switch Image</label>
							<!-- <comment><![CDATA[]]></comment> -->
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>70</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</switch_image>
						<auto_selection translate="label comment">
							<label>Auto Selection</label>
							<comment><![CDATA[If several options are available, when the first option is selected, all further options are chosen automatically to the first value
]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>80</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</auto_selection>
					</fields>
				</settings>
				<category_page>
					<label>Category / Search Results / Tag Product List Page</label>
					<frontend_type>text</frontend_type>
					<sort_order>200</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<show_options translate="label comment">
							<label>Show Options</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</show_options>
						<image_size translate="label comment">
							<label>Image Size</label>
							<comment><![CDATA[{Width}x{Height}]]></comment>
							<frontend_type>Text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</image_size>
						<display_link translate="label comment">
							<label>Display Link for Additional Icons</label>
							<comment><![CDATA[If option "Use Icons" is enabled]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</display_link>
						<link_text translate="label comment">
							<label>Additional Link Text</label>
							<comment><![CDATA['%s' is the number of additional icons]]></comment>
							<frontend_type>Text</frontend_type>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</link_text>
						<icons_qty translate="label comment">
							<label>Display Maximum Icons per Option</label>
							<frontend_type>Text</frontend_type>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</icons_qty>
					</fields>
				</category_page>
				<product_page>
					<label>Product View Page</label>
					<frontend_type>text</frontend_type>
					<sort_order>300</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<image_size translate="label comment">
							<label>Image Size</label>
							<comment><![CDATA[{Width}x{Height}]]></comment>
							<frontend_type>Text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</image_size>
						<thumb_size translate="label comment">
							<label>Thumb Size</label>
							<comment><![CDATA[{Width}x{Height}]]></comment>
							<frontend_type>Text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</thumb_size>
					</fields>
				</product_page>
			</groups>
		</colorswatch>
  </sections>
</config>
