<config>
    <sections>
        <catalog>
            <groups>
                <layered_navigation translate="label">
                    <label>Seo Layered Navigation</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>501</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <url_style translate="label">
                            <label>Url Style</label>
                            <frontend_type>select</frontend_type>
                            <source_model>ecommerceteam_sln/system_config_source_url_style</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </url_style>
                        <url_style_decimal translate="label">
                            <label>Decimal Filter Location</label>
                            <frontend_type>select</frontend_type>
                            <source_model>ecommerceteam_sln/system_config_source_decimal_style</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </url_style_decimal>
                        <enable_category translate="label">
                            <label>Category Filter</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_category>
                        <cat_filter_position>
                            <label>Category Filter Position</label>
                            <frontend_type>select</frontend_type>
                            <source_model>ecommerceteam_sln/system_config_source_category_position</source_model>
                            <sort_order>93</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cat_filter_position>
                        <cat_filter_type translate="label">
                            <label>Category Filter Type</label>
                            <frontend_type>select</frontend_type>
                            <source_model>ecommerceteam_sln/system_config_source_category_type</source_model>
                            <sort_order>94</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cat_filter_type>
                        <enable_ajax translate="label">
                            <label>Enable Ajax</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>95</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_ajax>
                        <hidehtml translate="label">
                            <label>Hide HTML from Spiders</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </hidehtml>
                        <robots translate="label">
                            <label>Default Robots Meta Value</label>
                            <frontend_type>select</frontend_type>
                            <source_model>ecommerceteam_sln/system_config_source_robots</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </robots>
                         <use_category_canonical translate="label">
                            <label>Use category canonical meta tag</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>105</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </use_category_canonical>
                        <pricerange translate="label">
                            <label>Price Range (SEO Navigation)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Leave empty for auto</comment>
                        </pricerange>
                        <default_block_enabled>
                            <label>Show Left Block</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>120</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </default_block_enabled>
                        <top_block_enabled>
                            <label>Show Top Block</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>130</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </top_block_enabled>
                        <right_block_enabled>
                            <label>Show Right Block</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>140</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </right_block_enabled>
                        <url_separator>
                            <label>Url Separator</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>150</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </url_separator>
                        <options_limit>
                            <label>Options limit for show more/less (leave 0 for no limit)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>200</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </options_limit>
                    </fields>
                </layered_navigation>
            </groups>
        </catalog>
    </sections>
</config>
