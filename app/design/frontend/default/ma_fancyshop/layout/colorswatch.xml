<layout version="0.1.0">
	
	<catalog_category_default>
        <reference name="head">
			<action method="addJs" ifconfig="colorswatch/settings/enabled"><script>varien/product.js</script></action>
			<action method="addJs" ifconfig="colorswatch/settings/enabled"><script>colorswatch/colorswatch.js</script></action>
			<action method="addItem" ifconfig="colorswatch/settings/enabled"><type>skin_css</type><name>css/colorswatch.css</name></action>
		</reference>
	</catalog_category_default>
	
	<catalog_category_layered>
        <reference name="head">
			<action method="addJs" ifconfig="colorswatch/settings/enabled"><script>varien/product.js</script></action>
			<action method="addJs" ifconfig="colorswatch/settings/enabled"><script>colorswatch/colorswatch.js</script></action>
			<action method="addItem" ifconfig="colorswatch/settings/enabled"><type>skin_css</type><name>css/colorswatch.css</name></action>
		</reference>
	</catalog_category_layered>
	
	<catalog_product_view>
        <reference name="head">
			<action method="addJs" ifconfig="colorswatch/settings/enabled"><script>colorswatch/colorswatch.js</script></action>
			<action method="addItem" ifconfig="colorswatch/settings/enabled"><type>skin_css</type><name>css/colorswatch.css</name></action>
		</reference>
		<reference name="product.info.media">
            <action method="setTemplate" ifconfig="colorswatch/settings/enabled"><template>colorswatch/product/view/media.phtml</template></action>
		</reference>
	</catalog_product_view>
	
	<PRODUCT_TYPE_configurable>
        <reference name="product.info.options.configurable">
            <action method="setTemplate" ifconfig="colorswatch/settings/enabled"><template>colorswatch/product/view/type/options/configurable.phtml</template></action>
        </reference>
    </PRODUCT_TYPE_configurable>
	
	<catalogsearch_result_index>
		<reference name="head">
			<action method="addJs" ifconfig="colorswatch/settings/enabled"><script>varien/product.js</script></action>
			<action method="addJs" ifconfig="colorswatch/settings/enabled"><script>colorswatch/colorswatch.js</script></action>
			<action method="addItem" ifconfig="colorswatch/settings/enabled"><type>skin_css</type><name>css/colorswatch.css</name></action>
		</reference>
	</catalogsearch_result_index>
	
	<catalogsearch_advanced_result>
		<reference name="head">
			<action method="addJs" ifconfig="colorswatch/settings/enabled"><script>varien/product.js</script></action>
			<action method="addJs" ifconfig="colorswatch/settings/enabled"><script>colorswatch/colorswatch.js</script></action>
			<action method="addItem" ifconfig="colorswatch/settings/enabled"><type>skin_css</type><name>css/colorswatch.css</name></action>
		</reference>
	</catalogsearch_advanced_result>
	
	<tag_product_list>
		<reference name="head">
			<action method="addJs" ifconfig="colorswatch/settings/enabled"><script>varien/product.js</script></action>
			<action method="addJs" ifconfig="colorswatch/settings/enabled"><script>colorswatch/colorswatch.js</script></action>
			<action method="addItem" ifconfig="colorswatch/settings/enabled"><type>skin_css</type><name>css/colorswatch.css</name></action>
		</reference>
	</tag_product_list>
	
</layout>
