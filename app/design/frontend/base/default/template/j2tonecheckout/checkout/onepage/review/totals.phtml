<?php if ($this->getTotals()): ?>
<?php $extra_colspan = 0;?>
<?php if (Mage::getStoreConfig('j2tonecheckout/default/show_delete')): ?>
<?php $extra_colspan++;?>
<?php endif;?>
<?php if (Mage::getStoreConfig('j2tonecheckout/default/show_image')): ?>
<?php $extra_colspan++;?>
<?php endif;?>

<tfoot>
    <?php $_colspan = $this->helper('tax')->displayCartBothPrices() ? 5 : 3; ?>
    <?php if (Mage::getStoreConfig('j2tonecheckout/default/show_update')): ?>
    <tr>
        <td class="a-right checkout-update-qty" colspan="<?php echo $_colspan+$extra_colspan+1; ?>">
            <button onclick="j2t_one_checkout.cartUpdateQty(); void(0);" type="button" name="update_cart_action" value="update_qty" title="<?php echo $this->__('Update Shopping Cart'); ?>" class="button btn-update"><span><span><?php echo $this->__('Update Shopping Cart'); ?></span></span></button>
        </td>
    </tr>
    <?php endif;?>
    <?php echo $this->renderTotals(null, $_colspan+$extra_colspan); ?>
    <?php echo $this->renderTotals('footer', $_colspan+$extra_colspan); ?>
    <?php if ($this->needDisplayBaseGrandtotal()):?>
    <tr>
        <td class="a-right" colspan="<?php echo $_colspan+$extra_colspan; ?>">
            <small><?php echo $this->helper('sales')->__('Your credit card will be charged for') ?></small>
        </td>
        <td class="a-right">
            <small><?php echo $this->displayBaseGrandtotal() ?></small>
        </td>
    </tr>
    <?php endif?>
</tfoot>
<?php endif; ?>
